source "https://rubygems.org"

# Pro použití vzdáleného tématu (remote theme)
gem "jekyll"
gem "jekyll-remote-theme"

# Doporučené gemy pro SEO a funkčnost Beautiful Jekyll
gem "jekyll-sitemap"
gem "jekyll-feed"

# Opatření proti LoadError v Ruby 3.4.x
gem "csv"
gem "logger"
gem "base64"
gem "bigdecimal"

# Pro lokální vývoj
group :development do
  gem "jekyll-watch"
end
